@{
    ViewBag.Title = "Página de inicio";
}

<head>
    <link rel="stylesheet" href="~/Content/homePageAccess.css">
</head>

<div class="jumbotron">
    <h1>Pizza Hut David</h1>
    <hr />
</div>

<div class="row">
    <h2 class="text-center"><strong>Pizzas</strong></h2>
    <div class="col-4">
        <div class="imageHomePage">
            <img src="~/Images/pizza01.png" alt="Responsive image" style="width: 20rem" />
            <div class="image__overlay image__overlay--light">
                <div class="image__title">@Html.ActionLink("Ordene Ya", "../Prices/SetProducts", new { selectedProduct = "Pizza Grande Pepperoni" })</div>
